<ui:FluentWindow x:Class="SSF2EventCompilerWPF.ThemeCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSF2EventCompilerWPF"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Create Custom Theme" Height="700" Width="750"
        WindowStartupLocation="CenterOwner"
        WindowBackdropType="None"
        WindowCornerPreference="Round">
    <Grid>
        <!-- Custom Title Bar -->
        <Border Background="{DynamicResource ApplicationBackgroundBrush}" Height="32" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Image x:Name="TitleBarIcon" Grid.Column="0" Width="16" Height="16" Margin="12,8,8,8" VerticalAlignment="Center"/>

                <!-- Title -->
                <TextBlock x:Name="TitleTextBlock" Grid.Column="1" Text="Create Custom Theme" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <ui:Button x:Name="MinimizeButton" Icon="{ui:SymbolIcon Subtract16}" Width="32" Height="32" Appearance="Transparent" Click="MinimizeButton_Click"/>
                    <ui:Button x:Name="CloseButton" Icon="{ui:SymbolIcon Dismiss16}" Width="32" Height="32" Appearance="Transparent" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,32,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content -->
            <ScrollViewer Grid.Row="0" Margin="20,16,20,0">
                <StackPanel>
                <!-- Theme Name -->
                <ui:Card Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Theme Name" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <ui:TextBox x:Name="ThemeNameTextBox" PlaceholderText="Enter theme name..." Margin="0,0,0,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </ui:Card>

                    <!-- Colors Section -->
                    <ui:Card Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Colors" FontSize="14" FontWeight="Medium" Margin="0,0,0,12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                            <!-- Accent Color -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Accent Color" FontSize="12" FontWeight="Medium" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBox x:Name="AccentColorTextBox" Grid.Column="0" Text="#39FF14" Margin="0,0,8,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Border x:Name="AccentColorPreview" Grid.Column="1" Width="32" Height="32" Background="#39FF14" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0,0,8,0"/>
                                    <ui:Button x:Name="AccentColorPickerButton" Grid.Column="2" Content="ðŸŽ¨" Width="40" Height="32" Click="AccentColorPickerButton_Click"/>
                                </Grid>
                            </StackPanel>

                            <!-- Background Color -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Background Color" FontSize="12" FontWeight="Medium" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBox x:Name="BackgroundColorTextBox" Grid.Column="0" Text="#1C1C1C" Margin="0,0,8,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Border x:Name="BackgroundColorPreview" Grid.Column="1" Width="32" Height="32" Background="#1C1C1C" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0,0,8,0"/>
                                    <ui:Button x:Name="BackgroundColorPickerButton" Grid.Column="2" Content="ðŸŽ¨" Width="40" Height="32" Click="BackgroundColorPickerButton_Click"/>
                                </Grid>
                            </StackPanel>

                            <!-- Text Color -->
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock Text="Text Color" FontSize="12" FontWeight="Medium" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBox x:Name="TextColorTextBox" Grid.Column="0" Text="#FFFFFF" Margin="0,0,8,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Border x:Name="TextColorPreview" Grid.Column="1" Width="32" Height="32" Background="#FFFFFF" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0,0,8,0"/>
                                    <ui:Button x:Name="TextColorPickerButton" Grid.Column="2" Content="ðŸŽ¨" Width="40" Height="32" Click="TextColorPickerButton_Click"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>

                <!-- Preview Section -->
                <ui:Card Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Preview" FontSize="14" FontWeight="Medium" Margin="0,0,0,12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <Border x:Name="PreviewBorder" Background="#1C1C1C" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="12">
                            <StackPanel>
                                <TextBlock x:Name="PreviewTitle" Text="Sample Text" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,8"/>
                                <TextBlock x:Name="PreviewText" Text="This is how your theme will look with the selected colors and font." Foreground="#FFFFFF" TextWrapping="Wrap"/>
                                <ui:Button x:Name="PreviewButton" Content="Sample Button" Margin="0,12,0,0" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ui:Card>

                <!-- Export/Import Section -->
                <ui:Card Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Theme Management" FontSize="14" FontWeight="Medium" Margin="0,0,0,12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:Button x:Name="ExportThemeButton" Content="Export Theme" Icon="{ui:SymbolIcon Save24}" Margin="0,0,8,0" Appearance="Primary"/>
                            <ui:Button x:Name="ImportThemeButton" Content="Import Theme" Icon="{ui:SymbolIcon Open24}" Appearance="Primary"/>
                        </StackPanel>
                        <TextBlock Text="Export your custom theme as a JSON file or import themes created by others." FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="1" Background="{DynamicResource ApplicationBackgroundBrush}" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="0,1,0,0" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,12,20,20">
                <ui:Button x:Name="CancelButton" Content="Cancel" Margin="0,0,12,0" Appearance="Primary"/>
                <ui:Button x:Name="SaveButton" Content="Save Theme" Appearance="Primary"/>
            </StackPanel>
        </Border>
    </Grid>
    </Grid>
</ui:FluentWindow>