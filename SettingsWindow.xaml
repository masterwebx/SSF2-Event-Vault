<ui:FluentWindow x:Class="SSF2EventCompilerWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSF2EventCompilerWPF"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Settings" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    <ui:FluentWindow.Resources>
        <Style x:Key="SettingsCardStyle" TargetType="ui:Card">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource SolidBackgroundFillColorBaseBrush}" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" Text="Settings" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="16,0,0,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                <!-- Drag Area -->
                <Border Grid.Column="1" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Width="32" Height="32" Background="Transparent" BorderThickness="0" ToolTip="Minimize">
                        <TextBlock Text="&#xE949;" FontFamily="Segoe MDL2 Assets" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </Button>
                    <Button x:Name="TitleCloseButton" Click="TitleCloseButton_Click" Width="32" Height="32" Background="Transparent" BorderThickness="0" ToolTip="Close">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Settings" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Theme Settings -->
                    <ui:Card Style="{StaticResource SettingsCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Themes" FontSize="14" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <StackPanel x:Name="ThemesPanel" Margin="0,0,0,8"/>
                            
                            <ui:Button x:Name="CreateThemeButton" Content="Create New Theme" Icon="{ui:SymbolIcon Add24}" HorizontalAlignment="Left" Click="CreateThemeButton_Click" Appearance="Primary"/>
                        </StackPanel>
                    </ui:Card>

                <!-- About -->
                <ui:Card Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="About" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="SSF2 Event Compiler" FontSize="14" FontWeight="Medium" Margin="0,0,0,4" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Version 1.0.0" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="A modern WPF application for compiling Super Smash Flash 2 events." FontSize="12" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,16"/>
                        <TextBlock Text="Created by Wex" FontSize="12" FontWeight="Medium" Margin="0,0,0,8" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="&#xE8F2;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock>
                                <Hyperlink NavigateUri="https://discord.gg/xZtTqX4" RequestNavigate="Hyperlink_RequestNavigate">
                                    <TextBlock Text="Join Discord" FontSize="12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE170;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock>
                                <Hyperlink NavigateUri="https://ko-fi.com/justwex" RequestNavigate="Hyperlink_RequestNavigate">
                                    <TextBlock Text="Donate on Ko-fi" FontSize="12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Margin="0,0,12,0"/>
            <ui:Button x:Name="SaveButton" Content="Save" Appearance="Primary" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
    </Grid>
</ui:FluentWindow>